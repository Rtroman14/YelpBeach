<% include ../partials/header %>


<div class="row justify-content-center">
	<div class="col-md-12 text-center">
		<h1>Edit <%= beach.name %></h1>
	</div>
	<div class="col-xs-12 col-md-6 col-lg-4">
		<form action="/beaches/<%= beach._id %>?_method=PUT" method="POST">
			<div class="form-group">
				<label for="name">Name</label>
				<input class="form-control" name="beach[name]" value="<%= beach.name %>" type="text">
			</div>
			<div class="form-group">
				<label for="image">Image Url</label>
				<input class="form-control" name="beach[image]" value="<%= beach.image %>" type="text">
			</div>
			<div class="form-group">
				<label for="location">Location</label>
				<input class="form-control" name="location" id="location" value="<%= beach.location %>" type="text">
			</div>
			<div class="form-group">
				<label for="description">Description</label>
				<input class="form-control" name="beach[description]" value="<%= beach.description %>" type="text">
			</div>
			<div class="form-group">
				<button class="btn btn-lg btn-primary btn-block">Submit</button>
			</div>
		</form>
		<a href="/beaches">Go Back</a>
	</div>
</div>

<% include ../partials/footer %>